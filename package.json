{
  "name": "simple-starter",
  "version": "0.6.0",
  "description": "Basic boilerplate to start development (pug + sass)",
  "homepage": "https://github.com/koshikishi/simple-starter",
  "bugs": {
    "url": "https://github.com/koshikishi/simple-starter/issues"
  },
  "license": "MIT",
  "author": "Anton Northern",
  "repository": "github:koshikishi/simple-starter",
  "scripts": {
    "editorconfig": "editorconfig-cli",
    "pug-lint": "pug-lint source/*.pug source/pug/**/*.pug",
    "eslint": "eslint source/js/",
    "stylelint": "stylelint \"source/sass/**/*.scss\"",
    "test": "npm run editorconfig && npm run pug-lint && npm run eslint && npm run stylelint",
    "build": "cross-env NODE_ENV=production gulp build",
    "start": "cross-env NODE_ENV=development gulp"
  },
  "devDependencies": {
    "@babel/core": "^7.22.1",
    "@babel/preset-env": "^7.22.4",
    "@htmlacademy/editorconfig-cli": "^1.0.0",
    "autoprefixer": "^10.4.14",
    "babel-loader": "^9.1.2",
    "browser-sync": "^2.29.3",
    "cross-env": "^7.0.3",
    "cssnano": "^6.0.1",
    "del": "^7.0.0",
    "eslint": "^8.41.0",
    "gulp": "^4.0.2",
    "gulp-html-minifier-terser": "^7.1.0",
    "gulp-plumber": "^1.2.1",
    "gulp-postcss": "^9.0.1",
    "gulp-pug": "^5.0.0",
    "gulp-rename": "^2.0.0",
    "gulp-sass": "^5.1.0",
    "gulp-sharp-optimize-images": "^2.0.2",
    "gulp-sourcemaps": "^3.0.0",
    "gulp-svgmin": "^4.1.0",
    "gulp-svgstore": "^9.0.0",
    "path": "^0.12.7",
    "postcss": "^8.4.24",
    "postcss-normalize": "^10.0.1",
    "postcss-preset-env": "^8.4.1",
    "pug-lint": "^2.7.0",
    "sass": "^1.62.1",
    "stylelint": "^15.6.2",
    "stylelint-config-standard-scss": "^9.0.0",
    "stylelint-order": "^6.0.3",
    "webpack": "^5.84.1",
    "webpack-stream": "^7.0.0"
  },
  "engines": {
    "node": "^16 || ^18"
  },
  "browserslist": [
    "last 2 versions",
    "not dead",
    "not ie <= 11",
    "not op_mini all",
    "not < 0.2%"
  ],
  "editorconfig-cli": [
    "*.json",
    "*.js",
    "source/*.pug",
    "source/pug/**/*.pug",
    "source/js/**/*.js",
    "source/img/**/*.svg",
    "source/sass/**/*.scss"
  ]
}
